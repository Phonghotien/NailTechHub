extends layout/layout

block vars
    -title = 'Login'
    -bodyClass = 'page-sign'

block container 
  section.sign 
    .sign-flex 
      .sign-form
        .sign-form-inner
          .wrapper 
            p.sign-sub Welcome!
            h2.sign-tt Login
            form(action="")
              .form-list.row 
                .form-ip.col 
                  span.text User name 
                  input(type="text", placeholder="Enter your user name")
                .form-ip.col 
                  span.text Password
                  input(type='password', placeholder='Enter your password')
                  i.seepassJS.fas.fa-eye
              .sign-bot 
                label.sign-check 
                  input(type="checkbox",hidden)
                  span.sqr 
                  span.txt Remember me
                a(href="").sign-forgot Forgot password?
              +Btn("Login","button","full")
              .sign-note 
                |Dont have an account? 
                a.sign-note-link(href="") Register 
              a(href="").sign-gg-btn 
                +img("h-ic-gg.svg")
                span.txt Login with Google
          .sign-note.two 
            |Have a business account? 
            a.sign-note-link(href="") Login as a professional
      .sign-img
        .wrapper 
          .img
            +img("h-sign-in.jpg")